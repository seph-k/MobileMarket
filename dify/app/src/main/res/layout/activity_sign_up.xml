<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context="com.example.login.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/Back_Main"
            android:backgroundTint="@color/purple_200"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/signup"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:typeface="serif"
            />
    </LinearLayout>


    <EditText
        android:id="@+id/new_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="5dp"
        android:hint="First Name"
        android:padding="5dp" />

    <EditText
        android:id="@+id/new_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_person_2_24"
        android:drawablePadding="5dp"
        android:hint="Last Name"
        android:padding="5dp" />


    <LinearLayout
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_lname"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spinnerYearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:drawableStart="@drawable/baseline_edit_calendar_24"
            android:drawablePadding="5dp"
            android:hint="DOB" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_lname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:hint="Year"
            android:spinnerMode="dropdown"> </Spinner>


        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerYear"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:hint="Month"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinnerDay"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerMonth"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:hint="Day"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:padding="5dp" />

    <EditText
        android:id="@+id/new_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_person_add_24"
        android:drawablePadding="5dp"
        android:inputType="text"
        android:hint="Username"
        android:padding="5dp" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_numbers_24"
        android:drawablePadding="5dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/Add"
        android:layout_below="@id/new_password"
        android:text="Add"
        android:backgroundTint="@color/purple_200"/>

</RelativeLayout>